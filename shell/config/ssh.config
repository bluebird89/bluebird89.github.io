# ~/.ssh/config
Host *
     Port 2222

Host remoteserver
     HostName remote.example.com
     User neo
     Port 2112

# 复用  SSH 连接
Host *
    ControlMaster auto
    ControlPath /tmp/ssh_mux_%h_%p_%r
    ControlPersist 86400
    TCPKeepAlive=yes
    ServerAliveInterval=15
    ServerAliveCountMax=6
    StrictHostKeyChecking=no
    Compression=yes
    ForwardAgent=yes
